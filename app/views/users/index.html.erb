<br>

<div class="container">
  <div class="row">
    
    <div class="col-md-12">
      <div class="page-header">
        <h1>美食達人</h1>
      </div>
    </div>

      <% @users.each do |user| %>
      <div class="col-md-3 col-sm-4 col-xs-6 text-center follow-item">
        <div class="follow-item">
          <%= image_tag "http://via.placeholder.com/180x180", class: "img-rounded" %>

          <div class="caption">
            <h4><%= link_to user.name, user_path(user) %></h4>
            <%= render partial: "shared/follow", locals: {user: user} %>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>

<ul>

  <% @users.each do |user| %>
    <li>
      <%= user.name %>
      <% if user != current_user %>
        <%= link_to 'Friend', friendships_path(friending_id: user), method: :post %>
        <%= link_to 'Unfriend', friendship_path(user), method: :delete %>
      <% end %>
    </li>
  <% end %>

</ul>